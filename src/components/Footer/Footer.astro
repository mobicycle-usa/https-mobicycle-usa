---
import Logo from '../Header/Nav/Logo.astro';
---
<!-- FOOTER -->
<section class="py-10 bg-gray-900 overflow-hidden">
    <div class="px-10 pt-10 pb-6 bg-gray-800 rounded-3xl">
      <div class="flex flex-wrap items-center justify-between mb-10 -m-4">

        <!-- LOGO -->
        <div class="w-full md:w-1/2 p-4">
          <a class="inline-block" href="#">
              <Logo />
          </a>
        </div>

        <div class="w-full md:w-1/2 p-4">
          <div class="md:max-w-md ml-auto">
            <div class="flex flex-wrap items-center -m-2">
              <div class="w-full md:w-auto p-1.5">
              </div>
            </div>
          </div>
        </div>

      </div>

      <div class="p-10 mb-6 bg-gray-900 rounded-3xl">
        <div class="grid sm:grid-flow-col md:justify-around -m-4">

          <div class="w-auto p-4">
            <h3 class="font-heading mb-7 text-gray-100 font-bold">TECHNOLOGY</h3>
            <ul>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://mobicycle.ai">EE Management</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://ewaste.tools">eWaste Management</a></li>

            </ul>
          </div>

          <div class="w-auto p-4">
            <h3 class="font-heading mb-7 text-gray-100 font-bold">SERVICES</h3>
            <ul>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://mobicycle.consulting">Consulting</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://mobicycle.games">Games</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://mobicycle.marketing">Marketing</a></li>

            </ul>
          </div>

          <div class="w-auto p-4">
            <h3 class="font-heading mb-7 text-gray-100 font-bold">COMPANY</h3>
            <ul>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://about.mobicycle.group">About us</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://case-studies.mobicycle.group">Case studies</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://capabilities.mobicycle.group">Capabilities statements</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://about.mobicycle.group">Careers</a></li>
            </ul>
          </div>

          <div class="w-auto p-4">
            <h3 class="font-heading mb-7 text-gray-100 font-bold">LEGAL</h3>
            <ul>

              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://disclaimer.mobicycle.group">Disclaimer</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://cookie-policy.mobicycle.group/">Cookies</a></li>
              <li class="mb-4"><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://privacy.mobicycle.group">Privacy</a></li>
              <li><a class="inline-block text-gray-500 hover:text-gray-600 font-bold" href="https://terms.mobicycle.group">Terms</a></li>
            </ul>
          </div>

        </div>

      </div>

      <div class="flex flex-wrap justify-center items-center md:-m-1 space-x-2 space-y-4 sm:space-y-0">

        <div class="text-gray-400 text-center sm:text-left text-sm sm:text-base max-w-xs sm:max-w-full"><p>1603 Capitol Ave. Suite 310 A223 Cheyenne, Wyoming 82001 </p></div>

        <div class="text-transparent md:text-gray-400 text-center"> | </div>

        <div class="text-gray-400 text-right text-sm sm:text-base"> <p>Rue de la Presse, 4 - 1000 Bruxelles Belgium</p></div>

        <div class="w-auto p-1"><p class="text-gray-500 text-center text-sm sm:text-base">&copy; Copyright 2023. All rights reserved by</p></div>

        <div class="w-auto text-gray-400 text-sm"><h1>MobiCycle LLC.</h1></div>

      </div>
    </div>
</section>
